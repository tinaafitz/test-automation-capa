---
apiVersion: apps/v1
kind: Deployment
metadata:
  name: autonode-scale-test
  labels:
    app: autonode-scale-test
    test: karpenter-scaling
spec:
  replicas: {{ autonode_test_replicas }}
  selector:
    matchLabels:
      app: autonode-scale-test
  template:
    metadata:
      labels:
        app: autonode-scale-test
        test: karpenter-scaling
    spec:
      # NodeSelector to target Karpenter-provisioned nodes (optional)
      {% if autonode_test_node_selector is defined %}
      nodeSelector:
        {% for key, value in autonode_test_node_selector.items() %}
        {{ key }}: {{ value }}
        {% endfor %}
      {% endif %}

      # Affinity rules (optional)
      {% if autonode_test_affinity is defined %}
      affinity:
        {{ autonode_test_affinity | to_yaml | indent(8) }}
      {% endif %}

      # Tolerations for node taints (optional)
      {% if autonode_test_tolerations is defined %}
      tolerations:
        {% for toleration in autonode_test_tolerations %}
        - key: {{ toleration.key }}
          operator: {{ toleration.operator | default('Equal') }}
          {% if toleration.value is defined %}
          value: {{ toleration.value }}
          {% endif %}
          effect: {{ toleration.effect }}
        {% endfor %}
      {% endif %}

      containers:
      - name: pause
        image: {{ autonode_test_image | default('registry.k8s.io/pause:3.9') }}
        resources:
          requests:
            cpu: {{ autonode_test_cpu }}
            memory: {{ autonode_test_memory }}
          limits:
            cpu: {{ autonode_test_cpu_limit | default(autonode_test_cpu) }}
            memory: {{ autonode_test_memory_limit | default(autonode_test_memory) }}

        # Liveness probe to ensure container stays running
        livenessProbe:
          exec:
            command:
            - /bin/sh
            - -c
            - exit 0
          initialDelaySeconds: 5
          periodSeconds: 10

        # Readiness probe
        readinessProbe:
          exec:
            command:
            - /bin/sh
            - -c
            - exit 0
          initialDelaySeconds: 3
          periodSeconds: 5

      # Terminate pods quickly during cleanup
      terminationGracePeriodSeconds: 5

      # Anti-affinity to spread pods across nodes (optional)
      {% if autonode_test_spread_pods | default(true) %}
      affinity:
        podAntiAffinity:
          preferredDuringSchedulingIgnoredDuringExecution:
          - weight: 100
            podAffinityTerm:
              labelSelector:
                matchExpressions:
                - key: app
                  operator: In
                  values:
                  - autonode-scale-test
              topologyKey: kubernetes.io/hostname
      {% endif %}
