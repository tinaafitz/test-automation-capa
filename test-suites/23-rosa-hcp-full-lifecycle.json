{
  "name": "ROSA HCP Full Lifecycle",
  "description": "End-to-end ROSA HCP cluster lifecycle testing",
  "execution": "sequential",
  "stopOnFailure": true,
  "notifyOnComplete": true,
  "playbooks": [
    {
      "name": "Cap-Enable-Test",
      "description": "Ensure CAPI/CAPA are enabled",
      "timeout": 600,
      "required": true,
      "file": "playbooks/cap-enable-test.yml"
    },
    {
      "name": "Capi-Rosa-Basic-Test",
      "description": "Create ROSA HCP cluster",
      "timeout": 2400,
      "required": true,
      "file": "playbooks/capi-rosa-basic-test.yml"
    },
    {
      "name": "Test-Rosa-Log-Forwarding",
      "description": "Test log forwarding configuration",
      "timeout": 600,
      "required": false,
      "file": "playbooks/test-rosa-log-forwarding.yml"
    },
    {
      "name": "Capi-Rosahcp-Test",
      "description": "Validate cluster health and features",
      "timeout": 900,
      "required": true,
      "file": "playbooks/capi-rosahcp-test.yml"
    }
  ],
  "tags": [
    "nightly",
    "rosa-hcp",
    "lifecycle"
  ],
  "schedule": "0 3 * * *"
}
