{
  "name": "ROSA HCP Full Lifecycle",
  "description": "End-to-end ROSA HCP cluster lifecycle testing",
  "execution": "sequential",
  "stopOnFailure": true,
  "notifyOnComplete": true,
  "playbooks": [
    {
      "name": "cap-enable-test.yml",
      "description": "Ensure CAPI/CAPA are enabled",
      "timeout": 600,
      "required": true
    },
    {
      "name": "capi-rosa-basic-test.yml",
      "description": "Create ROSA HCP cluster",
      "timeout": 2400,
      "required": true
    },
    {
      "name": "test-rosa-log-forwarding.yml",
      "description": "Test log forwarding configuration",
      "timeout": 600,
      "required": false
    },
    {
      "name": "capi-rosahcp-test.yml",
      "description": "Validate cluster health and features",
      "timeout": 900,
      "required": true
    }
  ],
  "tags": ["nightly", "rosa-hcp", "lifecycle"],
  "schedule": "0 3 * * *"
}
